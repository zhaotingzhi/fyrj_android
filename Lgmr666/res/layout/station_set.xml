<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/robot_set"
        android:layout_width="370dp"
        android:layout_height="380dp"
        android:clickable="true"
        android:layout_alignBottom="@+id/bottom"
        android:layout_alignParentRight="true"
        android:background="@android:color/black"  >

      <Button
            android:id="@+id/r_connect_close"
            android:layout_width="wrap_content"
            android:background="@color/black"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="关闭"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/r_connect_close"
            android:layout_alignBottom="@+id/r_connect_close"
            android:layout_centerHorizontal="true"
            android:text="新建"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <View
            android:id="@+id/view10"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/r_connect_close"
            android:layout_marginTop="13dp"
            android:background="@color/line" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/r_connect_close"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="52dp"
            android:text="选择放样方法"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/rear_rendezvous"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rear_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/blue"
            android:text="后方交会"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/rear_view"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView27"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/blue"
            android:text="后视"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </RelativeLayout>
