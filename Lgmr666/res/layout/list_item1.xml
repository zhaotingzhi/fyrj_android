<?xml version="1.0" encoding="utf-8"?>
<!-- 一定要使用相对布局 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_a"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/txt1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="0dp"
        android:gravity="center"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_margin="0dp"
        android:layout_marginLeft="100dp"
        android:layout_toRightOf="@id/txt1"
        android:gravity="center"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tet3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txt2"
        android:gravity="center"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tet4"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tet3"
        android:gravity="center"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/txtx"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tet4"
        android:gravity="center"
        android:textSize="16dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txty"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tet4"
        android:gravity="center"
        android:textSize="16dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txtz"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tet4"
        android:gravity="center"
        android:textSize="16dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tet5"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="41dp"
        android:layout_toRightOf="@+id/txtz"
        android:gravity="center"
        android:textSize="16dp" />

    <ImageButton
        android:id="@+id/btn_comment"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/transparent"
        android:src="@android:drawable/ic_menu_edit" />

    <ImageButton
        android:id="@+id/del_comment"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="2dp"
        android:layout_toLeftOf="@+id/btn_comment"
        android:background="@color/transparent"
        android:src="@android:drawable/ic_delete"
        android:visibility="gone" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tet5"
        android:background="@color/line" />

    <TextView
        android:id="@+id/tet6"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tet5"
        android:visibility="gone" />

</RelativeLayout>